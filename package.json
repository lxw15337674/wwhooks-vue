{
  "name": "monorepo",
  "version": "1.0.0",
  "scripts": {
    "components:dev": "pnpm --filter wwwcomponents-vue storybook",
    "components:build": "pnpm --filter wwwcomponents-vue build-storybook",
    "hooks:dev": "pnpm --filter wwhooks-vue docs:dev",
    "hooks:debug": "pnpm --filter wwhooks-vue debug"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ruabick/md-demo-plugins": "^0.3.3",
    "@ruabick/vitepress-demo-block": "^0.3.3",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "autoprefixer": "^10.4.19",
    "babel-plugin-import": "^1.13.8",
    "cz-conventional-changelog": "^3.3.0",
    "element-plus": "^2.6.2",
    "gh-pages": "^4.0.0",
    "git-cz": "^4.9.0",
    "lint-staged": "^13.3.0",
    "markdown-it-vuese": "^0.4.0",
    "prettier": "^2.8.8",
    "typescript": "^5.4.3",
    "vite": "^5.2.3",
    "vite-plugin-vitepress-auto-sidebar": "^1.6.3",
    "vite-plugin-vitepress-demo": "^2.2.1",
    "vite-plugin-vue-devtools": "^7.0.20",
    "vitepress": "1.0.0-rc.39",
    "vitepress-theme-demoblock": "^3.0.3",
    "vue": "^3.4.21",
    "vue-tsc": "^1.8.27"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}